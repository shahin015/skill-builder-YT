<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Regster.RegsttitionFragment">


 <LinearLayout
     android:gravity="center"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     >
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <ImageView
             android:id="@+id/reg_image"
             android:layout_width="90dp"
             android:layout_height="90dp"
             android:layout_centerHorizontal="true"
             android:src="@drawable/logo_main">

         </ImageView>

         <TextView
             android:layout_marginBottom="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/reg_image"
             android:layout_centerHorizontal="true"

             android:text="Registrastion"
             android:textColor="@color/dark_green"
             android:textSize="20sp">

         </TextView>
     </RelativeLayout>
     <LinearLayout
         android:padding="16dp"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <EditText
             android:background="@drawable/edit_text_background"
             android:layout_width="match_parent"
             android:layout_height="47dp"
             android:paddingLeft="12dp"
             android:hint="Name"
             android:id="@+id/ed_name"
             />
         <EditText
             android:layout_width="match_parent"
       android:background="@drawable/edit_text_background"
             android:layout_height="47dp"
             android:layout_marginTop="10dp"
             android:paddingLeft="12dp"
             android:hint="Mobail Bank Account "
             android:id="@+id/ed_account"
             />
         <RelativeLayout
             android:layout_marginTop="10dp"
             android:layout_width="match_parent"

             android:layout_height="wrap_content"

             >

             <TextView
                 android:id="@+id/setEmail"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_centerVertical="true"
                 android:clickable="false"
                 android:layout_marginLeft="10dp"
                 android:inputType="textEmailAddress"
                 android:text="Clik Button for Get email"
                 android:textColor="@color/dark_green"
                 android:textSize="14sp" />

             <Button
                 android:id="@+id/getEmail"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="10dp"
                 android:background="@drawable/button_shape"
                 android:paddingLeft="12dp"
                 android:paddingRight="12dp"
                 android:text="Get Email"
                 android:textColor="@color/white"
                 android:textSize="18sp" />



         </RelativeLayout>


         <EditText

             android:layout_width="match_parent"
             android:layout_height="47dp"
             android:paddingLeft="12dp"
             android:background="@drawable/edit_text_background"
             android:layout_marginTop="10dp"
             android:hint="pass word"
             android:id="@+id/passwoed_o"
             />
         <EditText
             android:layout_width="match_parent"
             android:layout_height="47dp"
             android:paddingLeft="12dp"
             android:background="@drawable/edit_text_background"
             android:layout_marginTop="10dp"
             android:hint="Match password"
             android:id="@+id/passwoed_m"
             />
         <EditText
             android:layout_width="match_parent"
             android:layout_height="47dp"
             android:paddingLeft="12dp"
             android:background="@drawable/edit_text_background"
             android:layout_marginTop="10dp"
             android:hint="locqual address/house/ dis"
             android:id="@+id/house"

             />
         <Button
             android:layout_marginTop="20sp"
             android:layout_width="wrap_content"
             android:layout_gravity="center"
             android:textSize="15dp"
             android:background="@drawable/button_shape"
             android:textColor="@color/white"
             android:paddingLeft="12dp"
             android:paddingRight="12dp"
             android:layout_height="42dp"
             android:text="Regstition "
             android:id="@+id/regstition"

             />



     </LinearLayout>



 </LinearLayout>

</FrameLayout>